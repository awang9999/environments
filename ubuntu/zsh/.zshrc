 CURDIR=$'%F{yellow}%3~%f'
 POINTER=$'%F{blue}\u27A4%f %F{white}'
 VENV=$''
 PROMPT="(${TIME})-(${USERANDMACHINE})-(${CURDIR})${NEWLINE}${POINTER}"

